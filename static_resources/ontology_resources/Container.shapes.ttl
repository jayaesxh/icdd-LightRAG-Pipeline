@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix ct: <https://standards.iso.org/iso/21597/-1/ed-1/en/Container#> .
@prefix ls: <https://standards.iso.org/iso/21597/-1/ed-1/en/Linkset#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

ct:ContainerDescription a sh:NodeShape ;
  sh:targetClass ct:ContainerDescription ;
  sh:closed true ;
  sh:property [
    sh:path ct:conformanceIndicator ;
    sh:datatype <http://www.w3.org/2001/XMLSchema#string> ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:path ct:containsDocument ;
    sh:class ct:Document ;
    sh:minCount 1 ;
  ] ;
  sh:property [
    sh:path ct:containsLinkset ;
    sh:class ct:Linkset ;
    sh:minCount 1 ;
  ] ;
  sh:property [
    sh:path ct:publisher ;
    sh:class ct:Party ;
    sh:minCount 1 ;
  ] .

ct:Linkset a sh:NodeShape ;
  sh:targetClass ct:Linkset ;
  sh:closed true ;
  sh:property [
    sh:path ct:filename ;
    sh:datatype <http://www.w3.org/2001/XMLSchema#string> ;
    sh:minCount 1 ;
  ] .
